{
  "name": "codasis",
  "displayName": "Codasis",
  "description": "Advanced AI-powered code intelligence platform with deep codebase understanding",
  "version": "0.1.0",
  "publisher": "codasis",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/codasis/vscode-extension"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Snippets"
  ],
  "keywords": [
    "ai",
    "assistant",
    "deepseek",
    "code-completion",
    "nlp"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codasis.askQuestion",
        "title": "Ask AI Question",
        "category": "Codasis"
      },
      {
        "command": "codasis.analyzeCode",
        "title": "Analyze Current Code",
        "category": "Codasis"
      },
      {
        "command": "codasis.explainCode",
        "title": "Explain Selected Code",
        "category": "Codasis"
      },
      {
        "command": "codasis.generateTests",
        "title": "Generate Tests",
        "category": "Codasis"
      },
      {
        "command": "codasis.refactorCode",
        "title": "Refactor Code",
        "category": "Codasis"
      },
      {
        "command": "codasis.openChat",
        "title": "Open AI Chat",
        "category": "Codasis"
      },
      {
        "command": "codasis.indexWorkspace",
        "title": "Index Workspace for AI Context",
        "category": "Codasis"
      },
      {
        "command": "codasis.smartAnalyze",
        "title": "Smart Code Analysis",
        "category": "Codasis"
      },
      {
        "command": "codasis.openContextPanel",
        "title": "Open Context Panel",
        "category": "Codasis"
      },
      {
        "command": "codasis.showProjectInsights",
        "title": "Show Project Insights",
        "category": "Codasis"
      },
      {
        "command": "codasis.toggleInlineSuggestions",
        "title": "Toggle Inline Suggestions",
        "category": "Codasis"
      }
    ],
    "keybindings": [
      {
        "command": "codasis.askQuestion",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a"
      },
      {
        "command": "codasis.openChat",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c"
      },
      {
        "command": "codasis.indexWorkspace",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i"
      },
      {
        "command": "codasis.smartAnalyze",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s"
      },
      {
        "command": "codasis.openContextPanel",
        "key": "ctrl+shift+x",
        "mac": "cmd+shift+x"
      },
      {
        "command": "codasis.toggleInlineSuggestions",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "codasis.explainCode",
          "when": "editorHasSelection",
          "group": "codasis"
        },
        {
          "command": "codasis.generateTests",
          "when": "editorHasSelection",
          "group": "codasis"
        },
        {
          "command": "codasis.refactorCode",
          "when": "editorHasSelection",
          "group": "codasis"
        },
        {
          "command": "codasis.smartAnalyze",
          "when": "editorHasSelection",
          "group": "codasis"
        }
      ],
      "explorer/context": [
        {
          "command": "codasis.analyzeCode",
          "when": "resourceExtname == .js || resourceExtname == .ts || resourceExtname == .py || resourceExtname == .php",
          "group": "codasis"
        }
      ]
    },
    "views": {
      "codasis": [
        {
          "id": "codasis-chat",
          "name": "AI Chat",
          "type": "webview"
        },
        {
          "id": "codasis-context",
          "name": "Context Explorer",
          "type": "tree"
        },
        {
          "id": "codasis-insights",
          "name": "Project Insights",
          "type": "tree"
        },
        {
          "id": "codasis-models",
          "name": "AI Models",
          "type": "tree"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codasis",
          "title": "Codasis",
          "icon": "$(brain)"
        }
      ]
    },
    "configuration": {
      "title": "Codasis",
      "properties": {
        "codasis.apiUrl": {
          "type": "string",
          "default": "http://localhost:8000/api",
          "description": "Backend API URL"
        },
        "codasis.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for authentication"
        },
        "codasis.preferredModel": {
          "type": "string",
          "enum": ["deepseek-r1", "gpt-4", "claude-3", "gemini-pro"],
          "default": "deepseek-r1",
          "description": "Preferred AI model for responses"
        },
        "codasis.autoComplete": {
          "type": "boolean",
          "default": true,
          "description": "Enable auto-completion suggestions"
        },
        "codasis.contextLines": {
          "type": "number",
          "default": 50,
          "description": "Number of context lines to send with requests"
        },
        "codasis.inlineSuggestions": {
          "type": "boolean",
          "default": true,
          "description": "Show inline code suggestions"
        },
        "codasis.enableHoverInfo": {
          "type": "boolean",
          "default": true,
          "description": "Show AI insights on hover"
        },
        "codasis.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Show code lens with AI suggestions"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/vsce": "^2.15.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
